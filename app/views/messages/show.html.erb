<div class="wrapper">
  <div class="message-content">
    <%= cl_image_tag @message.photo, height: 300, width: 600, crop: :fill %>
    <h3><%= @message.message %></h3>
    <h4>- <a href="mailto:<%= @message.email %>"><%= @message.name %></a></h4>
    <div class="message-links">
      <%= link_to root_path do %>
        <i class="fa fa-home" aria-hidden="true"></i>
      <% end %>
      <%= link_to "Delete", message_path(@message), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %>
    </div>
  </div>
</div>
