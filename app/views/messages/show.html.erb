<div class="wrapper">
  <div class="message-content">
    <%= cl_image_tag @message.photo, height: 400, width: 600, crop: :fill, class: "message-photo" %>
    <h3>DEAR SHIRLEY AND ALAN</h3>
    <p><%= @message.message %></p>
    <p><a href="mailto:<%= @message.email %>"><%= @message.name %></a></p>
    <%= link_to "All Messages", messages_path %>
    <div class="message-links">
      <% if @message.previous.presence %>
        <%= link_to @message.previous do %>
          <i class="fa fa-arrow-left" aria-hidden="true"></i>
        <% end %>
      <% end %>
      <%= link_to root_path do %>
        <i class="fa fa-home" aria-hidden="true"></i>
      <% end %>
      <%= link_to message_path(@message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
      <% if @message.next.presence %>
        <%= link_to @message.next do %>
          <i class="fa fa-arrow-right" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= content_for(:title, "Message from " + @message.name) %>
