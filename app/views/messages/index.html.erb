<div class="cards">
  <% if @messages.empty? %>
    <div class="cover" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= image_path 'empty.jpg' %>">
    </div>
    <div class="content bottom">
      <div class="text">
        <h1><i class="fa fa-heart" aria-hidden="true"></i></h1>
      </div>
    </div>
  <% else %>
    <% @messages.each do |message| %>
      <div class="col-xs-12 col-sm-3 col-lg-3">
        <% photo_url = message.photo? ? message.photo : "appicbtz2anicytb79lj" %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= cl_image_path photo_url %>">
          <div class="card-body">
            <%= link_to "", message_path(message), class: "card-link" %>
            <h4><%= message.name.upcase %></h4>
            <% message_count = 230 %>
            <% if message.message.chars.count > message_count %>
              <p><%= message.message.chars.first(message_count).join %>...</p>
            <% else %>
              <p><%= message.message %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= content_for(:title, "alovesoshir | All Messages") %>
