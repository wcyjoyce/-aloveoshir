<div class="docScroller">

  <!-- Cover -->
  <div class="page">
    <div class="cover hidden-xs" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'light-1.jpg' %>)">
    </div>
    <div class="mobile cover hidden-sm hidden-md hidden-lg" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'jap-portrait-1.jpg' %>)">
    </div>
    <div class="content bottom">
      <div class="text">
        <h1>SHIRLEY & ALAN</h1>
        <h2>23 DECEMBER 2017</h2>
        <a href="mailto:alovesoshir@gmail.com" class="btn btn-default">RSVP</a>
        <%= link_to "LEAVE A MESSAGE", new_message_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>

  <div class="flex">
    <!-- Desktop: Schedule -->
