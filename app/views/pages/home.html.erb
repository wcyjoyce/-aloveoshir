      <%= render "schedule" %>
    </div>
    <!-- Desktop: Story -->
    <div class="half hidden-xs" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'light-3.jpg' %>)">
      <%= render "story" %>
    </div>

    <!-- Desktop: Schedule -->
    <div class="half hidden-sm hidden-md hidden-lg" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'jap-portrait-2.jpg' %>)">
      <%= render "schedule" %>
    </div>
    <!-- Desktop: Story -->
    <div class="half hidden-sm hidden-md hidden-lg" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'jap-portrait-3.jpg' %>)">
      <%= render "story" %>
    </div>
  </div>

  <!-- Anchor -->
  <div class="page">
    <div class="anchor hidden-xs" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'light-4.jpg' %>)">
    </div>
    <div class="anchor hidden-sm hidden-md hidden-lg" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= image_path 'jap-portrait-4.jpg' %>)">
